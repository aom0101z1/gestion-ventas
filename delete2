    <script>
        // Variables globales
        let currentSalesperson = 'maria_garcia';
        let sheetConfig = {
            id: localStorage.getItem('sheetId') || '',
            name: localStorage.getItem('sheetName') || 'Hoja1'
        };
        let allData = [];
        let isConnected = false;

        // Inicializar
        document.addEventListener('DOMContentLoaded', function() {
            checkConfiguration();
            if (sheetConfig.id) {
                document.getElementById('sheetId').value = sheetConfig.id;
                document.getElementById('sheetName').value = sheetConfig.name;
                connectToSheet();
            }
        });

        // Verificar configuraci√≥n
        function checkConfiguration() {
            if (!sheetConfig.id) {
                document.getElementById('setupWarning').style.display = 'block';
                document.getElementById('setupSteps').style.display = 'block';
                document.getElementById('connectionStatus').textContent = 'üî¥ Sin Configurar';
                document.getElementById('connectionStatus').className = 'connection-status disconnected';
            } else {
                document.getElementById('setupWarning').style.display = 'none';
                document.getElementById('setupSteps').style.display = 'none';
            }
        }

        // Configurar Google Sheet
        function configureSheet() {
            const sheetId = document.getElementById('sheetId').value.trim();
            const sheetName = document.getElementById('sheetName').value.trim();
            
            if (!sheetId) {
                alert('‚ùå Por favor ingresa el ID del Google Sheet');
                return;
            }

            sheetConfig.id = sheetId;
            sheetConfig.name = sheetName;
            
            localStorage.setItem('sheetId', sheetId);
            localStorage.setItem('sheetName', sheetName);
            
            document.getElementById('configResult').innerHTML = '<div style="color: #10b981; font-weight: 500;">‚úÖ Configuraci√≥n guardada. Conectando...</div>';
            
            setTimeout(() => {
                connectToSheet();
                checkConfiguration();
            }, 1000);
        }

        // Conectar con Google Sheets
        async function connectToSheet() {
            try {
                const url = `https://docs.google.com/spreadsheets/d/${sheetConfig.id}/gviz/tq?tqx=out:json&sheet=${sheetConfig.name}`;
                const response = await fetch(url);
                const text = await response.text();
                
                // Parsear respuesta de Google Sheets
                const jsonData = text.substring(47).slice(0, -2);
                const data = JSON.parse(jsonData);
                
                if (data.table && data.table.rows) {
                    isConnected = true;
                    document.getElementById('connectionStatus').textContent = 'üü¢ Conectado';
                    document.getElementById('connectionStatus').className = 'connection-status connected';
                    parseSheetData(data.table.rows);
                } else {
                    throw new Error('No se pudo leer el Google Sheet');
                }
            } catch (error) {
                console.error('Error conectando con Google Sheets:', error);
                isConnected = false;
                document.getElementById('connectionStatus').textContent = 'üî¥ Error de Conexi√≥n';
                document.getElementById('connectionStatus').className = 'connection-status disconnected';
                alert('‚ùå Error conectando con Google Sheets. Verifica:\n1. El ID es correcto\n2. El sheet es p√∫blico\n3. Tienes internet');
            }
        }

        // Parsear datos del sheet
        function parseSheetData(rows) {
            allData = [];
            rows.forEach((row, index) => {
                if (index === 0 || !row.c || !row.c[1]) return; // Skip header and empty rows
                
                const contact = {
                    id: row.c[0] ? row.c[0].v : '',
                    name: row.c[1] ? row.c[1].v : '',
                    phone: row.c[2] ? row.c[2].v : '',
                    email: row.c[3] ? row.c[3].v : '',
                    source: row.c[4] ? row.c[4].v : '',
                    location: row.c[5] ? row.c[5].v : '',
                    notes: row.c[6] ? row.c[6].v : '',
                    salesperson: row.c[7] ? row.c[7].v : '',
                    date: row.c[8] ? row.c[8].v : '',
                    time: row.c[9] ? row.c[9].v : '',
                    status: row.c[10] ? row.c[10].v : 'Nuevo'
                };
                allData.push(contact);
            });
            
            updateAllViews();
        }

        // Agregar contacto a Google Sheets
        async function addContact(event) {
            event.preventDefault();
            
            if (!isConnected) {
                alert('‚ùå Primero configura la conexi√≥n con Google Sheets');
                return;
            }
            
            const contact = {
                id: Date.now(),
                name: document.getElementById('contactName').value,
                phone: document.getElementById('contactPhone').value,
                email: document.getElementById('contactEmail').value,
                source: document.getElementById('contactSource').value,
                location: document.getElementById('contactLocation').value,
                notes: document.getElementById('contactNotes').value,
                salesperson: currentSalesperson,
                date: new Date().toISOString().split('T')[0],
                time: new Date().toLocaleTimeString(),
                status: 'Nuevo'
            };
            
            // Simular adici√≥n (en un sistema real, aqu√≠ har√≠as POST a Google Sheets API)
            allData.push(contact);
            
            // Limpiar formulario
            event.target.reset();
            
            // Actualizar vistas
            updateAllViews();
            
            alert('‚úÖ Contacto registrado! \n\nüìù IMPORTANTE: Para guardar en Google Sheets, ve manualmente al sheet y agrega la fila:\n' +
                  `${contact.id} | ${contact.name} | ${contact.phone} | ${contact.email} | ${contact.source} | ${contact.location} | ${contact.notes} | ${contact.salesperson} | ${contact.date} | ${contact.time} | ${contact.status}`);
        }

        // Actualizar datos desde Google Sheets
        function refreshData() {
            if (isConnected) {
                connectToSheet();
            } else {
                alert('‚ùå No hay conexi√≥n con Google Sheets');
            }
        }

        // Cambiar vendedor
        function switchSalesperson() {
            currentSalesperson = document.getElementById('currentSalesperson').value;
            updateAllViews();
        }

        // Actualizar todas las vistas
        function updateAllViews() {
            updateStats();
            updateTodayContacts();
            updateLeadsTable();
            updateReports();
        }

        // Mostrar tabs
        function showTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.add('hidden');
            });
            
            document.querySelectorAll('.tab').forEach(btn => {
                btn.classList.remove('active');
            });
            
            document.getElementById(tabName).classList.remove('hidden');
            event.target.classList.add('active');
        }

        // Actualizar estad√≠sticas
        function updateStats() {
            const today = new Date().toISOString().split('T')[0];
            
            let todayContacts, totalLeads, activeLeads, conversions;
            
            if (currentSalesperson === 'admin') {
                todayContacts = allData.filter(c => c.date === today).length;
                totalLeads = allData.length;
                activeLeads = allData.filter(l => l.status !== 'Convertido').length;
                conversions = allData.filter(l => l.status === 'Convertido').length;
            } else {
                todayContacts = allData.filter(c => c.date === today && c.salesperson === currentSalesperson).length;
                totalLeads = allData.filter(l => l.salesperson === currentSalesperson).length;
                activeLeads = allData.filter(l => l.status !== 'Convertido' && l.salesperson === currentSalesperson).length;
                conversions = allData.filter(l => l.status === 'Convertido' && l.salesperson === currentSalesperson).length;
            }
            
            // Actualizar n√∫meros
            document.getElementById('totalLeads').textContent = totalLeads;
            document.getElementById('activeLeads').textContent = activeLeads;
            document.getElementById('conversions').textContent = conversions;
            
            // Actualizar progreso circular
            const progress = Math.min(todayContacts / 10, 1);
            const circumference = 2 * Math.PI * 54;
            const offset = circumference - (progress * circumference);
            
            document.getElementById('progressCircle').style.strokeDasharray = circumference;
            document.getElementById('progressCircle').style.strokeDashoffset = offset;
            document.getElementById('progressText').textContent = `${todayContacts}/10`;
            
            // Cambiar color seg√∫n progreso
            const progressCircle = document.getElementById('progressCircle');
            if (progress >= 1) {
                progressCircle.style.stroke = '#10b981';
            } else if (progress >= 0.7) {
                progressCircle.style.stroke = '#f59e0b';
            } else {
                progressCircle.style.stroke = '#ef4444';
            }
        }

        // Actualizar contactos de hoy
        function updateTodayContacts() {
            const today = new Date().toISOString().split('T')[0];
            let todayContacts;
            
            if (currentSalesperson === 'admin') {
                todayContacts = allData.filter(c => c.date === today);
            } else {
                todayContacts = allData.filter(c => c.date === today && c.salesperson === currentSalesperson);
            }
            
            const container = document.getElementById('todayContacts');
            
            if (todayContacts.length === 0) {
                container.innerHTML = '<p style="color: #666; text-align: center; padding: 2rem;">No hay contactos registrados hoy</p>';
                return;
            }
            
            container.innerHTML = todayContacts.map(contact => `
                <div style="background: #f9fafb; padding: 1rem; border-radius: 5px; margin-bottom: 0.5rem;">
                    <div style="font-weight: 600;">${contact.name}</div>
                    <div style="color: #666; font-size: 0.9rem;">${contact.phone} ‚Ä¢ ${contact.source}</div>
                    <div style="color: #666; font-size: 0.9rem;">${contact.time} ‚Ä¢ ${getSalespersonName(contact.salesperson)}</div>
                </div>
            `).join('');
        }

        // Actualizar tabla de leads
        function updateLeadsTable() {
            let displayLeads;
            
            if (currentSalesperson === 'admin') {
                displayLeads = allData;
            } else {
                displayLeads = allData.filter(l => l.salesperson === currentSalesperson);
            }
            
            const tbody = document.getElementById('leadsTable');
            tbody.innerHTML = displayLeads.map(lead => `
                <tr>
                    <td>${lead.name}</td>
                    <td>${lead.phone}</td>
                    <td>${lead.source}</td>
                    <td><span class="status-badge status-${lead.status.toLowerCase().replace(' ', '')}">${lead.status}</span></td>
                    <td>${getSalespersonName(lead.salesperson)}</td>
                    <td>${lead.date}</td>
                    <td>
                        <button onclick="alert('Para cambiar estado, edita directamente en Google Sheets')" class="btn" style="padding: 0.25rem 0.5rem; font-size: 0.8rem;">
                            Editar en Sheet
                        </button>
                    </td>
                </tr>
            `).join('');
        }

        // Actualizar reportes
        function updateReports() {
            // Performance diario
            const today = new Date().toISOString().split('T')[0];
            const salespeople = ['maria_garcia', 'juan_perez'];
            
            const dailyPerf = salespeople.map(salesperson => {
                const todayContacts = allData.filter(c => c.date === today && c.salesperson === salesperson).length;
                const progress = Math.round((todayContacts / 10) * 100);
                
                return {
                    name: getSalespersonName(salesperson),
                    contacts: todayContacts,
                    progress: progress
                };
            });
            
            document.getElementById('dailyPerformance').innerHTML = `
                <div style="background: #f9fafb; padding: 1rem; border-radius: 5px;">
                    ${dailyPerf.map(perf => `
                        <div style="margin-bottom: 1rem; padding: 1rem; background: white; border-radius: 5px;">
                            <div style="font-weight: 600; margin-bottom: 0.5rem;">${perf.name}</div>
                            <div style="display: flex; justify-content: space-between; align-items: center;">
                                <span>${perf.contacts}/10 contactos</span>
                                <span style="font-weight: bold; color: ${perf.progress >= 100 ? '#10b981' : perf.progress >= 70 ? '#f59e0b' : '#ef4444'}">${perf.progress}%</span>
                            </div>
                            <div style="background: #e5e7eb; height: 8px; border-radius: 4px; margin-top: 0.5rem;">
                                <div style="background: ${perf.progress >= 100 ? '#10b981' : perf.progress >= 70 ? '#f59e0b' : '#ef4444'}; height: 8px; border-radius: 4px; width: ${Math.min(perf.progress, 100)}%;"></div>
                            </div>
                        </div>
                    `).join('')}
                </div>
            `;
            
            // Metas por vendedor
            const salesTargets = salespeople.map(salesperson => {
                const leads = allData.filter(l => l.salesperson === salesperson);
                const conversions = leads.filter(l => l.status === 'Convertido').length;
                const conversionRate = leads.length > 0 ? (conversions / leads.length * 100).toFixed(1) : 0;
                
                return {
                    name: getSalespersonName(salesperson),
                    leads: leads.length,
                    conversions,
                    conversionRate
                };
            });
            
            document.getElementById('salesTargets').innerHTML = `
                <div style="background: #f9fafb; padding: 1rem; border-radius: 5px;">
                    ${salesTargets.map(target => `
                        <div style="margin-bottom: 1rem; padding: 1rem; background: white; border-radius: 5px;">
                            <div style="font-weight: 600; margin-bottom: 0.5rem;">${target.name}</div>
                            <div style="font-size: 0.9rem; color: #666;">
                                üìã Leads: ${target.leads}<br>
                                ‚úÖ Conversiones: ${target.conversions}<br>
                                üìä Tasa: ${target.conversionRate}%
                            </div>
                        </div>
                    `).join('')}
                </div>
            `;
        }

        // Obtener nombre del vendedor
        function getSalespersonName(key) {
            const names = {
                'maria_garcia': 'Mar√≠a Garc√≠a',
                'juan_perez': 'Juan P√©rez',
                'admin': 'Admin'
            };
            return names[key] || key;
        }

        // Auto-refresh cada 30 segundos si hay conexi√≥n
        setInterval(() => {
            if (isConnected && document.visibilityState === 'visible') {
                refreshData();
            }
        }, 30000);
    </script>
</body>
